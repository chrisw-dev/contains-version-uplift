{
  "name": "dependency-version-uplift-check",
  "version": "1.0.0",
  "description": "GitHub Action to detect and report dependency version changes in Pull Requests",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "bundle": "rollup -c rollup.config.ts --configPlugin @rollup/plugin-typescript",
    "format": "prettier --write \"src/**/*.ts\" \"__tests__/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"__tests__/**/*.ts\"",
    "lint": "eslint src/ __tests__/",
    "lint:fix": "eslint src/ __tests__/ --fix",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "all": "npm run format && npm run lint && npm run test && npm run bundle",
    "prepare": "husky"
  },
  "keywords": [
    "github",
    "action",
    "dependency",
    "version",
    "uplift",
    "upgrade",
    "check"
  ],
  "author": "TODO: Set before publishing",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/exec": "^1.1.1",
    "@actions/github": "^6.0.0",
    "js-yaml": "^4.1.0",
    "semver": "^7.5.4",
    "toml": "^3.0.0",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/jest": "^29.5.12",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.11.0",
    "@types/semver": "^7.5.6",
    "@types/xml2js": "^0.4.14",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "eslint": "^8.57.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "prettier": "^3.2.0",
    "rollup": "^4.9.0",
    "ts-jest": "^29.1.2",
    "tslib": "^2.8.1",
    "typescript": "^5.3.3"
  }
}
